<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JessupBank"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ultra_marine_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
    </style>

    <style name="CustomDescriptionText" parent="CustomTitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
    </style>

    <style name="CustomLabelText" parent="CustomTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textColor">@color/catalina_blue</item>
    </style>

    <style name="CustomExitText" parent="CustomLabelText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/alizarin_crimson</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="boxStrokeColor">@color/ultra_marine_blue</item>
        <item name="boxStrokeWidth">1dp</item>

    </style>

    <style name="CustomEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:textColorHint">@color/dark_silver</item>
    </style>

    <style name="CustomPrimaryButton">
        <item name="android:backgroundTint">@color/ultra_marine_blue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="textAllCaps">true</item>
    </style>
    
    <style name="CustomRadioButton">
        <item name="android:buttonTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>

    <style name="CustomCardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:elevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/cultured</item>
    </style>

</resources>